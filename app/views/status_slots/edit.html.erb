<div class="max-w-3xl mx-auto px-4">
  <div class="flex items-center justify-between mb-6 flex-wrap">
    <h1 class="font-bold text-3xl mb-6">Edit status_slot</h1>
    <% if @status_slot.persisted? %>
    <%= button_to 'Destroy', @status_slot, method: :delete, class: "text-red-700 underline", data: { turbo_confirm: 'Are you sure?' } %>
    <% end %>
  </div>

  <%= render 'form', status_slot: @status_slot %>
</div>
