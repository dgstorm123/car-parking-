<div class="max-w-3xl mx-auto px-4">
  <div class="flex items-center justify-between">
    <h1 class="flex-1 font-bold text-3xl">Search</h1>

    <div class="flex-wrap lg:flex items-center lg:space-x-3">
      <%= link_to searches_path, class: button_class(theme: "transparent") do %>
      All Searches
      <% end %>
      <%= link_to edit_search_path(@search), class: button_class(theme:"primary") do %>
      Edit
      <% end %>
    </div>
  </div>

  <ul class="text-slate-700">
      <li>
        <p class="font-semibold">Search:</p>
        <p><%= @search.search %></p>
      </li>
  </ul>
</div>
